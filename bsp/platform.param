ifeq ($(CHIP_ID), CHIP_HI3516C_V200)
	CFLAGS += -Dhi3516cv200
endif
ifeq ($(CHIP_ID), CHIP_HI3518E_V200)
	CFLAGS += -Dhi3518ev200
endif
ifeq ($(CHIP_ID), CHIP_HI3518E_V201)
	CFLAGS += -Dhi3518ev201
endif
ifeq ($(CHIP_ID), CHIP_HI3518E_V100)
	CFLAGS += -Dhi3518ev100
endif

ifeq ($(SENSOR_TYPE), PANASONIC_MN34220_SUBLVDS_1080P_30FPS)
	CFLAGS += -DHI_MIPI_ENABLE
endif  
