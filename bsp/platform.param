			  $(HISI_LIB_DIR)/libaec.a	\
			  $(HISI_LIB_DIR)/libresampler.a \
			  $(HISI_LIB_DIR)/libanr.a

HI_CFLAGS := -D$(HIARCH) -DHICHIP=$(HICHIP) -DCHIP_ID=$(CHIP_ID) -DSENSOR_TYPE=$(SENSOR_TYPE) -D$(ISP_VERSION)
HI_CFLAGS += -DHI_ACODEC_TYPE_INNER

HI_CFLAGS += $(CFLAGS)

HI_LIBS := $(SENSOR_LIBS) $(MPI_LIBS) $(AUDIO_LIBS)
